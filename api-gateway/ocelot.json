{
  "Routes": [
    // === AUTH COMMANDS ===
    {
      "DownstreamPathTemplate": "/api/v1/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/api/v1/auth/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE", "OPTIONS" ]
    },

    // === AUTH QUERIES ===
    {
      "DownstreamPathTemplate": "/api/v1/user/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service-query",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/api/v1/user/{everything}",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ]
    },

    // === ROLE COMMANDS ===
    {
      "DownstreamPathTemplate": "/api/v1/role/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/api/v1/command/role/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE", "OPTIONS" ]
    },

    // === ROLE QUERIES ===
    {
      "DownstreamPathTemplate": "/api/v1/role/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service-query",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/api/v1/query/role/{everything}",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ]
    },

    // === QUESTION ===
    {
      "DownstreamPathTemplate": "/api/v1/question/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "question-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/api/v1/question/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
    },

    {
      "DownstreamPathTemplate": "/api/v1/questionbank/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "question-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/api/v1/questionbank/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
    },

    {
      "DownstreamPathTemplate": "/api/v1/questionoption/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "question-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/api/v1/questionoption/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000"
  }
}
